<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"

    tools:context=".AddCaSi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_horizontal"
            android:text="INSERT INFORMATION"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="Mã Ca Sĩ: "
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/txtMaCS"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/edit_background"
            android:drawableLeft="@drawable/ic_insert_ma_buoi_dien"
            android:hint="Mã Ca Sĩ. VD CS07"
            android:textSize="20dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="Tên Ca Sĩ: "
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/txtTenCS"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/edit_background"
            android:drawableLeft="@drawable/ic_name"
            android:hint="Tên Ca Sĩ. VD: Ho Ngoc Khac Hung"
            android:textSize="20dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="Hình ảnh: "
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/txtUrl"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/edit_background"
            android:drawableLeft="@drawable/ic_insert_image"
            android:hint="URL image: https://........." />


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/btnInsert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_background"
        android:text="Insert"
        android:textColor="@color/white" />


</LinearLayout>