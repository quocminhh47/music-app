<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"

    tools:context=".AdminEditBuoiDien">

   <LinearLayout
       android:layout_marginRight="10dp"
       android:layout_marginLeft="10dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="70dp"
       android:layout_marginBottom="20dp"
       android:orientation="vertical">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="EDIT INFORMATION"
           android:fontFamily="@font/poppins_medium"
           android:textStyle="bold"
           android:textSize="20sp"
           android:gravity="center_horizontal"
           android:layout_gravity="center_horizontal"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Mã buổi diễn: "
           android:fontFamily="@font/poppins_regular"
           android:textStyle="bold"
           android:textSize="20dp"/>
       <EditText
           android:drawableLeft="@drawable/ic_insert_ma_buoi_dien"
           android:hint="Mã buổi diễn. VD BD0112"

           android:background="@drawable/edit_background"
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:textSize="20dp"
           android:id="@+id/txtAdminMaBD"
           android:enabled="false"/>




       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Ngày biểu diễn: "
           android:fontFamily="@font/poppins_regular"
           android:textStyle="bold"
           android:textSize="20dp"/>
       <EditText
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:background="@drawable/edit_background"
           android:drawableLeft="@drawable/ic_insert_date"
           android:textSize="20dp"
           android:hint="dd/mm/yyyy"

           android:id="@+id/txtAdminNgayBD"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Địa điểm: "
           android:fontFamily="@font/poppins_regular"
           android:textStyle="bold"
           android:textSize="20dp"/>
       <EditText
           android:background="@drawable/edit_background"
           android:drawableLeft="@drawable/ic_insert_location"
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:hint="VD: HoChiMinh"

           android:textSize="20dp"
           android:id="@+id/txtAdminDiaDiem"/>


       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Hình ảnh: "
           android:fontFamily="@font/poppins_regular"
           android:textStyle="bold"
           android:textSize="20dp"/>
       <EditText
           android:drawableLeft="@drawable/ic_insert_image"
           android:background="@drawable/edit_background"
           android:hint="URL image: https://........."
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:id="@+id/txtUrl"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Mã ca sĩ: "
           android:fontFamily="@font/poppins_regular"
           android:textStyle="bold"
           android:textSize="20dp"/>
       <Spinner
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:id="@+id/spinner_maCS"/>



       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Mã bài hát: "
           android:fontFamily="@font/poppins_regular"
           android:textStyle="bold"
           android:textSize="20dp"/>
       <Spinner
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:id="@+id/spinner_maBH"/>
   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/btn_background"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/btnSave"/>

        <androidx.appcompat.widget.AppCompatButton
            android:textColor="@color/white"
            android:layout_marginLeft="20sp"
            android:background="@drawable/btn_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:id="@+id/btnDelete"/>
    </LinearLayout>


</LinearLayout>